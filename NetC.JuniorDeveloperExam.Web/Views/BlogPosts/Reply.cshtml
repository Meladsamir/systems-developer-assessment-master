@model NetC.JuniorDeveloperExam.Web.Models.Reply

@{
    ViewBag.Title = "Replay";
    int _postId = Convert.ToInt32(TempData["PostId"]);
    int _commentId = Convert.ToInt32(TempData["CommentId"]);
}


@using (Html.BeginForm("Replay", "BlogPosts", new { postId = _postId, commentId = _commentId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<h2>Replay</h2>

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.EmailAddress)
            @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Email Address" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Message)
        @Html.EditorFor(m => m.Message, new { htmlAttributes = new { @rows = 3, @class = "form-control", placeholder = "Message" } })
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" />
<div>
    <a href="/blog/@_postId">Back to post</a>
</div>
}


