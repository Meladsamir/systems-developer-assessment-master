@model  NetC.JuniorDeveloperExam.Web.Models.Comment

<h5 class="card-header">Leave a Comment:</h5>
<div class="card-body">
    @using (Html.BeginForm("PostComment", "BlogPosts", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)

        <div class="form-row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.EmailAddress)
                @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Email Address" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Message)
            @Html.EditorFor(m => m.Message, new { htmlAttributes = new { @rows = 3, @class = "form-control", placeholder = "Message" } })
        </div>
        <input type="submit" value="Submit" class="btn btn-primary" />

    }
</div>
